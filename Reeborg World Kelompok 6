#Hurdle 1
#fungsi untuk belok kanan
def turn_right () : 
    turn_left () 
    turn_left ()
    turn_left () 

#fungsi untuk melewati tembok   
def jump () : 
    move () 
    turn_left () 
    move () 
    turn_right () 
    move () 
    turn_right ()
    move () 
    turn_left () 

#memanggil fungsi jump sesuai jumlah tembok yang dilewati    
jump ()
jump ()
jump ()
jump ()
jump ()
jump ()

